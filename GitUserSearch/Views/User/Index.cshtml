@{
    ViewData["Title"] = "Search User";
}

<script type="text/javascript">
    Document.ready(function () {
        $("#NotificationDiv").show();
    });
</script>

@if (TempData["Message"] != null)
{
<div class="alert alert-danger alert-dismissable">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
    <strong><span class="glyphicon glyphicon-remove"></span> Failed: </strong>
    @TempData["Message"]
</div>
}

<h2>@ViewData["Title"]</h2>
<hr />

<h4>Please input github username</h4>
<form class="form-inline" asp-controller="User" asp-action="Search" method="get">
    <div class="form-group">
        <label for="exampleInputName2">User Name</label>
        <input type="text" class="form-control" placeholder="User Name" name="username" required
               oninvalid="this.setCustomValidity('Please Enter GitHub User Name Here')"
               oninput="this.setCustomValidity('')">
        <input type="submit" class="btn btn-primary" value="Search" />
    </div>
</form>
